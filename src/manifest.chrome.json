{
	"manifest_version": 3,
	"name": "DanTagJa",
	"version": "1.0",

	"description": "Tags translation to japanese, for on browser.",
	"homepage_url": "https://github.com/MichinariNukazawa/DanTagJa_diffusion_tags_ja_tarnslate_webextension",
	"author": "michinari.nukazawa@gmail.com",

	"icons": {
		"128": "icons/icon128.png"
	},

	"action": {
		"default_title": "DanTagJa",
		"default_icon": "icons/icon128.png"
	},
	"background": {
		"service_worker": "background.js"
	},
	"host_permissions": [
		"file://*/*",
		"http://*/*",
		"https://*/*"
	],
	"permissions": [
		"webNavigation",
		"tabs",
		"activeTab",
		"scripting"
	]
}
